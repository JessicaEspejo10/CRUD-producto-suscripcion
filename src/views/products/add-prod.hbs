<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Agregar productos </h3>
                </div>
                <div class="card-body">
                    

                    <form action="/add-prod" method="post" enctype="multipart/form-data">
                    
                        <div class="input-group mt-2">
                            <label for="prodname" class="input-group-text"> Producto </label>
                            <input class="form-control" type="text" name="prodname" id="prodname"
                                placeholder="Ejm: Camisa" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="size" class="input-group-text"> Tallas disponibles </label>
                            <input class="form-control" type="text" name="size" id="size"
                                placeholder="Ejm: XS-S-M" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="color" class="input-group-text"> Color </label>
                            <input class="form-control" type="color" name="color" id="color"
                                 required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="brand" class="input-group-text"> Marca </label>
                            <input class="form-control" type="text" name="brand" id="brand"
                                placeholder="Ejm: Quechua" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="price" class="input-group-text"> Precio </label>
                            <input class="form-control" type="number" name="price" id="price" placeholder="Ejm: 25000" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="description" class="input-group-text"> Detalle </label>
                            <input class="form-control" type="text" name="description" id="description" placeholder="Ejm: Para el frio y actividades de trekking.">
                        </div>
                        
                        <div class="input-group mt-2">
                                <input class="form-control" type="file" name="file" id="file" autofocus>
                        </div>
                        
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success" > Agregar producto </button>                               
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>